{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "DzArquitectura Template",
	"Parameters" : {
		"ProjectName" : {
			"Type" : "String",
			"Description" : "Tag key 'Project' will this value.",
			"Default" : "dzarq",
			"AllowedPattern" : "[A-Za-z0-9]+",
			"MinLength" : "1",
			"MaxLength" : "10"
		},
		"Prefix" : {
			"Type" : "String",
			"Description" : "Tag key 'Name' will be prefixed with this value.",
			"Default" : "dz",
			"AllowedPattern" : "[A-Za-z0-9]+",
			"MinLength" : "1",
			"MaxLength" : "10"
		}
	},
	
	"Resources": {
		"DzNet": {
			"Type": "AWS::CloudFormation::Stack",
			"Properties": {
				"TemplateURL": "https://s3-eu-west-1.amazonaws.com/dzarq/cli/network.json",
				"Parameters": {
					"ProjectName" : {"Ref":"ProjectName"},
					"Prefix" : {"Ref":"Prefix"},
					"VpcCdir" : "10.0.0.0/16",
					"SubnetCidrA" : "10.0.0.0/24",
					"SubnetCidrB" : "10.0.1.0/24",
					"SubnetCidrC" : "10.0.2.0/24"
				}
			}  
		}
	}
}